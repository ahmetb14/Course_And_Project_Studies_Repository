package Concrete;

import Abstract.PlayerService;
import Entities.Game;
import Entities.Player;

public class PlayerManager implements PlayerService {

	@Override
	public void login(Player player) {
		
		System.out.println(player.getFirstName() + " Sisteme Giriþ Yapýldý!");
		
	}

	@Override
	public void register(Player player) {
		
		System.out.println(player.getFirstName() + " Sisteme Kayýt Yapýldý!");
		
	}

	@Override
	public void logout(Player player) {
		
		System.out.println(player.getFirstName() + " Sistemden Çýkýþ Yapýldý!");
		
	}


	public void buyGame(Player player, Game game) {
		
		System.out.println(player.getFirstName() + "-" + game.getName() + " Ýsimli Oyun Satýn Alýndý!");
		
	}

}
